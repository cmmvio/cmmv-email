{
    "name": "@cmmv/email",
    "version": "0.0.3",
    "description": "Module for sending emails with Nodemail for CMMV",
    "keywords": [
        "cmmv",
        "framework",
        "email",
        "nodemail"
    ],
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/types/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cmmvio/cmmv-email.git"
    },
    "author": "Andre Ferreira",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/cmmvio/cmmv-email/issues"
    },
    "homepage": "https://cmmv.io",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">= 20.0.0"
    },
    "lint-staged": {
        "**/*.ts": [
            "prettier --ignore-path ./.prettierignore --write"
        ]
    },
    "scripts": {
        "build:cjs": "tsc --project tsconfig.cjs.json",
        "build:esm": "tsc --project tsconfig.esm.json",
        "build": "npm run build:cjs && npm run build:esm",
        "prepare": "husky",
        "lint": "pnpm run lint:spec",
        "lint:fix": "pnpm run lint:spec -- --fix",
        "release": "pnpm build && node release.js",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
    },
    "devDependencies": {
        "@cmmv/testing": "^0.8.8",
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-angular": "^19.7.0",
        "@commitlint/config-conventional": "^19.6.0",
        "@swc-node/core": "^1.13.3",
        "@swc-node/register": "^1.10.9",
        "@swc/core": "^1.10.9",
        "@swc/helpers": "^0.5.15",
        "@types/node": "^22.10.10",
        "@types/nodemailer": "^6.4.17",
        "@typescript-eslint/eslint-plugin": "^8.21.0",
        "@typescript-eslint/parser": "^8.21.0",
        "chalk": "^5.4.1",
        "conventional-changelog": "^6.0.0",
        "conventional-changelog-cli": "^5.0.0",
        "enquirer": "^2.4.1",
        "esbuild": "^0.24.2",
        "esbuild-register": "^3.6.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-import": "^2.31.0",
        "execa": "^9.5.2",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.2",
        "prettier": "^3.4.2",
        "semver": "^7.6.3",
        "tslib": "^2.8.1",
        "typescript": "^5.7.3",
        "vitest": "^3.0.4"
    },
    "dependencies": {
        "@cmmv/core": "^0.8.8",
        "aws-sdk": "^2.1692.0",
        "nodemailer": "^6.10.0"
    }
}
